mixin pagination(pagination)
    nav
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item" button-pagination= pagination.currentPage-1 )
                    button(class="page-link" href="#") Trang trước
            if(pagination.currentPage === 1) 
                - for (let i = pagination.currentPage; i <= pagination.currentPage + 2; i++) {
                    li(class=`page-item ${i === pagination.currentPage ? "active" : ""}`)
                        button(class="page-link" button-pagination=i) #{i}
                - }
            else if(pagination.currentPage == pagination.totalPage)
                    li(class=`page-item active`)
                        button(class="page-link" button-pagination=pagination.currentPage) #{pagination.currentPage}
            else
                - for (let i = pagination.currentPage - 1; i <= pagination.currentPage + 1; i++) {
                    li(class=`page-item ${i === pagination.currentPage ? "active" : ""}`)
                        button(class="page-link" button-pagination=i) #{i}
                - }
            if(pagination.currentPage < pagination.totalPage)
                li(class="page-item" button-pagination= pagination.currentPage+1)
                    button(class="page-link" href="#") Kế tiếp