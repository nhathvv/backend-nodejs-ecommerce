extends ../../layouts/default.pug
include ../../mixins/select-tree.pug
block main
    if (data.title)
        h1(class="mb-4") #{data.title}
    if (records)
        +detail(records,data.parent_id)
    if (data.thumbnail)
        div(class="mb-4")
        img(
            src=data.thumbnail
            style="width: 100px"
        )

    if (data.status)
        div(class="mb-4")
        span Trạng thái:
        if (data.status === "active")
            span(class="badge badge-success") Hoạt động
        else
            span(class="badge badge-danger") Dừng hoạt động

    if (data.position)
        div(class="mb-4") Vị trí: <b>#{data.position}</b>

    if (data.description)
        div(class="mb-4") !{data.description}

    a(
        href=`${prefixAdmin}/products-category/edit/${data.id}`
        class="btn btn-warning"
    ) Chỉnh sửa

    script(src="/admin/js/product.js")